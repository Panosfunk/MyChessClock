<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <GridLayout
        android:id="@+id/starting_time_grid_layout"
        android:rowCount="2"
        android:columnCount="3"
        android:useDefaultMargins="true"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hours_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Hours"
            android:textAlignment="center" />

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/minutes_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Minutes"/>

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/seconds_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Seconds"/>

        <NumberPicker
            android:layout_margin="10dp"
            android:id="@+id/hour_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <NumberPicker
            android:layout_margin="10dp"
            android:id="@+id/minute_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <NumberPicker
            android:layout_margin="10dp"
            android:id="@+id/second_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </GridLayout>

    <Button
        android:id="@+id/starting_time_ok_btn"
        android:text="@string/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/starting_time_grid_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>